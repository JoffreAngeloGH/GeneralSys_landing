---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import '@fontsource-variable/montserrat';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>
      Política de Privacidad | General System - Desarrollo de Software
    </title>
    <meta
      name="description"
      content="Conoce nuestra política de privacidad. Información sobre cómo recopilamos, usamos y protegemos tus datos. General System SAS S.A.C.S"
    />

    <meta
      property="og:title"
      content="Política de Privacidad | General System - Desarrollo de Software"
    />
    <meta
      property="og:description"
      content="Conoce nuestra política de privacidad. Información sobre cómo recopilamos, usamos y protegemos tus datos. General System SAS S.A.C.S"
    />
    <meta property="og:image" content="/image/LogoHero.png" />
    <meta property="og:url" content="https://generalsystem.com/politica-de-privacidad" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Política de Privacidad | General System - Desarrollo de Software"
    />
    <meta
      name="twitter:description"
      content="Conoce nuestra política de privacidad. Información sobre cómo recopilamos, usamos y protegemos tus datos. General System SAS S.A.C.S"
    />
    <meta property="twitter:image" content="/image/LogoHero.png" />

    <link rel="canonical" href="https://generalsystem.com/politica-de-privacidad" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "Política de Privacidad",
        "url": "https://generalsystem.com/politica-de-privacidad",
        "isPartOf": {
          "@type": "WebSite",
          "name": "General System",
          "url": "https://generalsystem.com/"
        }
      }
    </script>

    <link
      rel="icon"
      media="(prefers-color-scheme: light)"
      type="image/svg+xml"
      href="/favicon1.svg"
    />
    <link
      rel="icon"
      media="(prefers-color-scheme: dark)"
      type="image/svg+xml"
      href="/favicon2.svg"
    />
    <meta name="generator" content={Astro.generator} />
  </head>

  <body>
    <NavBar />
    <slot />
    <Footer />
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
      font-family: 'Montserrat Variable', sans-serif;
    }
  </style>
</html>

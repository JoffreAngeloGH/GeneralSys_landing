---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>General System</title>

    <!-- Open Graph -->
    <meta
      property="og:title"
      content="General System SAS - Software a medida para empresas que exigen más."
    />
    <meta
      property="og:description"
      content="Desarrollamos soluciones de software personalizadas para pymes y grandes empresas. Rápido, confiable y adaptado a tus necesidades."
    />
    <meta property="og:image" content="/images/LogoHero.png" />
    <meta property="og:url" content="https://www.generalsystem.com.pe/" />
    <meta property="og:type" content="website" />

    <!-- Canonical -->
    <link rel="canonical" href="https://www.generalsystem.com.pe/" />
  </head>
  <body>
    <NavBar />
    <slot />
    <Footer />
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
